@model List<projekt_gosp.Models.additionalModels.OrderModel>

@{
    ViewBag.Title = "order";
}

<div class="row">
    <div class="col-sm-12 col-lg-12 col-md-12">
        <div class="row">
            <div class="col-sm-10 col-lg-10 col-md-10">
                <strong>Produkt</strong>
            </div>
            <div class="col-sm-1 col-lg-1 col-md-1">
                <strong>Ilosc</strong>
            </div>
            <div class="col-sm-1 col-lg-1 col-md-1">
                <strong>Cena</strong>
            </div>
        </div>
        <div class="row">
            <hr>
        </div>

        @foreach (var item in @Model)
        {
            <div class="row">
                <div class="col-sm-10 col-lg-10 col-md-10">@item.itemName</div>
                <div class="col-sm-1 col-lg-1 col-md-1">@item.quantity</div>
                <div class="col-sm-1 col-lg-1 col-md-1">@item.price</div>
            </div>
            <div class="row">
                <hr>
            </div>
        }
        <br>

        <div class="row">
            <div class="col-sm-2 col-lg-2 col-md-2">
                <div class="pull-right">Koszt Calkowity: @ViewBag.totalSum zł</div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12 col-lg-12 col-md-12">
                <br>
                <div class="form-group">
                    <a href="/shop/" class="btn btn-success pull-left">Anuluj</a>
                    <a href="/order/confirmorder/@ViewBag.orderID" class="btn btn-success pull-right">Zatwierdz zamowienie</a>
                </div>
            </div>
        </div>

    </div>
</div>