@{
    ViewBag.Title = "forgotPassword";
}

<div class="col-sm-6">
    <form id="forgotpassForm" action="/account/forgotpassword/" method="post">
        @Html.AntiForgeryToken()

        <div class="form-group">
            <input type="text" class="form-control input-lg" id="username" name="username" placeholder="Username">
        </div>

        <div class="form-group">
            <input type="email" class="form-control input-lg" id="email" name="email" placeholder="Email">
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-warning ">Reset my password</button>
            <a href="/account/login/" class="btn btn-warning ">Go back to Login</a>
        </div>
    </form>
    <h2>@Html.Raw(@ViewBag.msg)</h2>
    <h2>@Html.Raw(@ViewBag.error)</h2>
</div>

<script>
    $(document).ready(function () {

        $('#forgotpassForm').on('submit', function () {
            var usr = $('#username').val();
            var email = $('#email').val();

            if (usr == null || usr == "") {
                alert('Username is required!');
                return false;
            }

            if (email == null || email == "") {
                alert('Email is required!');
                return false;
            }

            return true;

        });
    });

</script>