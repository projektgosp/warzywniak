@model List<projekt_gosp.Models.Promocja>

@if (@Model != null && @Model.Count() > 0)
{
    <div class="row carousel-holder">
        <div class="col-md-12">
            <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    @for (int i = 0; i < @Model.Count(); ++i)
                    {
                        if (i == 0)
                        {
                            <li data-target="#carousel-example-generic" data-slide-to="@i" class="active"></li>
                        }
                        else
                        {
                            <li data-target="#carousel-example-generic" data-slide-to="@i"></li>
                        }
                    }
                </ol>
                <div class="carousel-inner">

                    @for (int i = 0; i < @Model.Count(); ++i)
                    {

                        <div class="item @if (i == 0) { <text>active</text>}">
                            <a href="/promotions/id/@Model[i].ID_promocji"><img class="slide-image" src="@Model[i].imagePath" alt="" style="max-width:1000px;max-height:300px"></a>
                        </div>
                    }
                </div>
                <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                </a>
                <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                </a>
            </div>
        </div>
    </div>
}

@if (@ViewBag.newItems != null && @ViewBag.newItems.Count > 0)
{
    <span class="lead">Najnowsze produkty:</span>
    <hr>
    <div class="row">
        @foreach (var itm in @ViewBag.newItems)
        {

            <div class="col-sm-4 col-lg-4 col-md-4">
                <div class="thumbnail">
                    <div style="height:150px;width:320px">
                        @if (@itm.attachedImage)
                        {
                            <img src="@itm.thumbPath" style="max-height:150px;max-width:260px">
                        }
                        else
                        {
                            <img src="/Media/no-image.jpg" style="max-height:150px;max-width:260px">
                        }
                    </div>
                    <div class="caption">
                        <h4 class="pull-right">@itm.Cena zł/@itm.RodzajCeny.opis</h4>
                        <h4>
                            <a href="/items/id/@itm.ID_produktu">@itm.Nazwa</a>
                        </h4>
                        <p>@itm.Opis</p>
                    </div>
                </div>
            </div>
        }
    </div>
}