@model List<projekt_gosp.Models.Produkt>

@if (@Model != null && @Model.Count > 0)
{
    foreach (var item in Model)
    {
        <div class="row">
            <div class="container-fluid shop-item itemDiv" data-id="@item.ID_produktu">
                <div class="col-lg-2 col-md-2 col-sm-2 shop-item-cell">
                    <a href="/items/globalid/@item.ID_produktu">
                        @if (@item.attachedImage)
                        {
                            <img src="@item.thumbPath" width="100%" height="100%">
                        }
                        else
                        {
                            <img src="/Media/no-image.jpg" width="100%" height="100%">
                        }
                    </a>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4 shop-item-cell"><a href="/items/globalid/@item.ID_produktu">@item.Nazwa<a /></div>
                <div class="col-lg-2 col-md-2 col-sm-2 shop-item-cell">Cena: @item.Cena zł</div>
            </div>
        </div>
    
        <div class="row">
            <a class="btn btn-danger"  href="/sellerpanel/additem/@item.ID_produktu">Dodaj produkt do sklepu</a>
        </div>
    
        <hr>
    }

    <div class="paginationCenter">
        <ul class="pagination">
            @for (int i = ViewBag.startPage; i <= ViewBag.endPage; i++)
            {
                <li @{if (i == ViewBag.activePage) { <text> class="active" </text>   }}><a href="/sellerpanel/addItemToShop?page=@i">@i</a></li>
            }
        </ul>
    </div>

}
else
{
    <h2>Brak produktów do wyświetlenia</h2>
}
