@model projekt_gosp.Models.Towar


@using (Html.BeginForm("editItem", "sellerpanel", FormMethod.Post,
            new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken();
    <fieldset>
        <legend>Edytuj produkt</legend>
        <div>
            <h2>@ViewBag.error</h2>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Produkt.Nazwa)
            @Html.TextBoxFor(model => model.Produkt.Nazwa, new { @class = "form-control", @readonly = "true" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Produkt.Opis)
            @Html.TextAreaFor(model => model.Produkt.Opis, new { @class = "form-control", @readonly = "true" })
        </div>

        <div class="form-group">
            <p><b>Kategoria produktu</b></p>
            @Html.TextBoxFor(model => model.Produkt.Kategoria.NameToDisplay, new { @class = "form-control", @readonly = "true" })
        </div>

        <div class="form-group">
            <p><b>Cena za @Model.Produkt.RodzajCeny.opis </b></p>
            @Html.TextBoxFor(model => model.Cena, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Cena)
        </div>



        <div class="form-group">
            <p><b>Termin waznosci</b></p>
            @Html.TextBoxFor(model => model.Data_waznosci, new { @class = "form-control", @id = "datepicker" })
            @Html.ValidationMessageFor(model => model.Data_waznosci)
        </div>

        <div class="form-group">
            <p><b>Ile @Model.Produkt.RodzajCeny.opis</b></p>
            @Html.TextBoxFor(model => model.Ilosc, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Ilosc)
        </div>

        <div class="form-group">
            <input class="btn btn-default" type="submit" value="Zapisz">
            <a class="btn btn-default" href="/sellerpanel/">Anuluj</a>
        </div>

    </fieldset>
}

<link href="/Content/styles.css" rel="stylesheet">

@Scripts.Render("~/bundles/jqueryval")

<script>
    $(function () {
        $("#datepicker").datepicker();
    });
</script>